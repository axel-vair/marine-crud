{% extends 'base.html.twig' %}
{% block title %}Boat Lover - Edition Navire{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Ajouter un navire </h1>

        {% for message in app.flashes('message') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}


        {% for message in app.flashes('message') %}
            {{ message }}
        {% endfor %}
        {{ form_start(form) }}

        {{ form_label(form.name) }}
        {{ form_widget(form.name)}}

        {{ form_label(form.identifier) }}
        {{ form_widget(form.identifier)}}

        {{ form_label(form.length) }}
        {{ form_widget(form.length)}}

        {{ form_label(form.tonnage) }}
        {{ form_widget(form.tonnage)}}

        {{ form_label(form.classe) }}
        {{ form_widget(form.classe)}}


        {{ form_row(form.submit, {'label': 'Ajouter un navire'}) }}

    </div>
{% endblock %}
